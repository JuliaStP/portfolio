.round-btn {
  width: 50px;
  height: 50px;
  border: 1px solid #fff;
  border-radius: 50%;
  margin-right: 30px;
  position: relative;

  &--left:before {
    content: '<';
    color: #fff;
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%, -50%);
  }

  &--right:before {
    content: '>';
    color: #fff;
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%, -50%);
    margin-right: 0;
  }
}