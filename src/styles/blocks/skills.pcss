.skills {
    background: url('~images/content/bg-middle.png') center center no-repeat;
    background-size: cover;
    position: relative;

    &:before {
        content: url('../images/content/keyboard.png');
        bottom: -9%;
        left:0;
        position: absolute;
    }
}

.skills__container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.skills__intro {
    width: 37%;
    margin-bottom: 96px;
}

.skills__title {
    padding-top:150px;
    font-size: 30px;
    font-weight: 700;
    margin-bottom: 60px;
}

.skills__text {
    opacity:0.5;
    line-height: 1.7;
}

.skills__tech {
    padding-left: 23%;
}
