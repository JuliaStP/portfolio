.app-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  color: #414C63;
}

.notification {
  transition: transform .4s;
}

.notification-container {
  position: fixed;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);

  &.active {
    .notification {
      transform: translateY(-100%);
    }
  }
}