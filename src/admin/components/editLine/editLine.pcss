.edit-line-component {
  &.blocked {
    opacity: 0.5;
    filter: grayscale(100%);
    pointer-events: none;
  }
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input {
  width: 60%;

  .no-side-paddings {
    width: 100%;
  }
}

.buttons {
  display: flex;
}

.edit-line__btn {
  margin-right: 0 !important;
}

.button-icon {
  margin-right: 20px;

  &:last-child {
    margin-right: 0;
  }
}