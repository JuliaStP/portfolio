script(type="text/x-template")#skills-list
  ul.skill
    li.skill__item(v-for='category in skills' :key='category.id')
      skills-row(
        :category='category' 
      )
        
    
script(type="text/x-template")#skill-row
  .skill-row
    .skill-row__title {{category.category}}
      ul.skill-row__list
        li.skill-row__item(v-for='skill in category.skills' :key='skill.id')
          skills-item(
            :skill='skill' 
          )
          
script(type="text/x-template")#skill-item
  .skill__img 
    svg(viewBox='0 0 100 100').skill__circle-shape
      circle(cx='50' cy='50' r='40').skill__circle.skill__circle--under
      circle(cx='50' cy='50' r='40' ref='orange-circle' stroke='url(#gradient)' transform='rotate(180 50 50)').skill__circle.skill__circle--above
      linearGradient(id='gradient' x1='0%' y1='0%' x2='100%' y2='0%')
        stop(offset='0%' stop-color='#d0731b')
        stop(offset='100%' stop-color='#dc9322')
    .skill__title {{skill.skill}}